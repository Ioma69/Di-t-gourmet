{% extends 'base.html.twig' %}



{% block body %}

{% for recipe in recipes %}

  <h3>{{ recipe.name }}</h3>
    
<section>

  <div class="row">
      <div class="col-md-5">
        <img src="/images/{{ recipe.image }}" alt="{{ recipe.name}}" class="img-fluid">
      </div>
      <div class="col-md-7 my-auto">
      
        <h6>Nom :</h6>
        <p>{{ recipe.name }}</p>
        <hr>
        <h6>Description :</h6>
        <p>{{ recipe.description }}</p>
        <hr>
        <h6>Temps de préparation : </h6>
        <p>{{ recipe.preparation_time}}</p>
        <hr>
        <h6>Temps de cuisson :</h6>
        <p>{{ recipe.cooking_time }}</p>
        <hr>
        <h6>Ingrédients : </h6>
        <p>{{ recipe.ingredients }}</p>
        <hr>
        <h6>Etapes de la recette :</h6>
        <p>{{ recipe.preparation }}</p>

      </div>
  </div>
        

</section>

    {% endfor %} 

{% endblock %}
